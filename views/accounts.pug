include includes/main.pug
  h2 Add Account üèß
  form(method="POST", action="/account-add")
    div(class="mb-3")
      label(for="exampleInputFirstName", class="form-label") Account Number
      input(type="number", class="form-control", id="exampleInputFirstName", aria-describedby="textlHelp", name="account_no") 
      label(for="exampleInputLastName", class="form-label") Client Id
      input(type="number", class="form-control", id="exampleInputLastName", aria-describedby="textlHelp", name="client_id")
      label(for="exampleInputEmail", class="form-label") Balance
      input(type="number", class="form-control", id="exampleInputEmail", aria-describedby="textlHelp", name="balance")
      label(for="exampleInputTelephone", class="form-label") Type
      input(type="number", class="form-control", id="exampleInputTelephone", aria-describedby="textlHelp", name="type")
    button(type="submit", class="btn btn-primary") Add
  table(class="table")
        thead
          tr(class="text-center")
            th(scope="col") #
            th(scope="col") Account Number
            th(scope="col") Client Id
            th(scope="col") Balance
            th(scope="col") Type
            th(scope="col") Options
        tbody
          each objectClient in responseFindAll
            tr(class="text-center", id=`account-${objectClient.id}`)
              th(scope="row")=  objectClient.id
              td= objectClient.account_no
              td= objectClient.client_id 
              td= objectClient.balance 
              td= objectClient.type
              td 
                div(class="container d-flex justify-content-around")
                  button(class="btn btn-warning", onClick=`accountUpdate(${objectClient.id})`) Update
                  a(class="btn btn-danger", href="/account-delete/"+objectClient.id) Delete  
include includes/footer.pug