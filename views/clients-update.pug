doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css", 
      rel="stylesheet", 
      integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6", 
      crossorigin="anonymous")
    title Add Cients
  body 
    section(class='container mt-5')
      table(class="table")
        thead
          tr(class="text-center")
            th(scope="col") #
            th(scope="col") First Name
            th(scope="col") Last Name
            th(scope="col") Email
            th(scope="col") Thelephone
            th(scope="col") Options
        tbody
          tr
            th(scope="row")=  responseFindAll[position].id
            form(action="/client-update/"+responseFindAll[position].id, method="POST")             
              td 
                input(type="text", name="first_name", value=responseFindAll[position].first_name)
              td
                input(type="text", name="last_name", value=responseFindAll[position].last_name)
              td
                input(type="text", name="email", value=responseFindAll[position].email)
              td
                input(type="text", name="telephone", value=responseFindAll[position].telephone)
              td
                div(class="container d-flex justify-content-around")
                  input(type="submit" class="btn btn-warning", value="Save")
          each objectClient in responseFindAll
            if objectClient.id != paramId
              tr
                th(scope="row")=  objectClient.id
                td= objectClient.first_name
                td= objectClient.last_name
                td= objectClient.email 
                td= objectClient.telephone
                td 
                  div(class="container d-flex justify-content-around")
                    a(class="btn btn-warning" href="/client-update/"+objectClient.id) Update
                    a(class="btn btn-danger" href="/client-delete/"+objectClient.id) Delete

